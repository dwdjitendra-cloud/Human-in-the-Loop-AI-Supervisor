PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/human-in-loop-ai
# Allow server to run without DB in dev
ALLOW_NO_DB=1

# Auth
JWT_SECRET=your-jwt-secret-key-change-in-production

# OpenAI (optional but recommended for real STT/Chat/TTS)
OPENAI_API_KEY=
# Optional voice label for OpenAI TTS
TTS_VOICE=alloy

# LiveKit (optional; used by Live Voice)
LIVEKIT_URL=
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# Optional notifications / timeout
TIMEOUT_MINUTES=5
NOTIFY_WEBHOOK_URL=http://localhost:5000/api/webhook/notify
